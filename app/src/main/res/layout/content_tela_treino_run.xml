<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fundoViewTreino"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="claudioshigemi.com.sevenminutesworkout.TelaTreinoRun"
    tools:showIn="@layout/activity_tela_treino_run"

    >

    <Button
        android:text="inicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/botaoInicio"
        android:onClick="clicaBotao"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/estrelaa"
            android:id="@+id/imagemEstrela"
            android:layout_centerHorizontal= "true"
            android:layout_centerVertical="true"

            android:alpha="0" />

        <TextView
            android:text="Abdominal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textoExercicioAtual"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="36sp" />

        <TextView
            android:text="30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textoTempo"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="50dp" />

        <TextView
            android:text="PrÃ³ximo Exercicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textoTituloProximoExercicio"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp" />

        <TextView
            android:text="Flexao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textoExercicioProximo"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="36sp" />
    </LinearLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:id="@+id/meuProgressoBar" />
</RelativeLayout>
